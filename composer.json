{
    "name":         "c-datculescu/amqp-base",
    "description":  "Allows easy declaration and management of complex AMQP configurations",
    "keywords":     ["amqp", "RabbitMQ", "message-bus"],
    "version":      "0.1",
    "type":         "library",
    "license":      "MIT",
    "authors": [
        {
            "name": "Cristian Datculescu",
            "email": "cristian.datculescu@gmail.com"
        }
    ],

    "require": {
        "symfony/dependency-injection": "dev-master",
        "symfony/yaml": "dev-master",
        "symfony/config": "dev-master",

        "ext-amqp": ">=1.0"
    },
    "autoload": {
        "psr-0": {
            "Builder":      "src/",
            "Config":       "src/"
        }
    },
    "target-dir": "cdatculescu/component/amqp-base",
    "minimum-stability": "dev"
}
